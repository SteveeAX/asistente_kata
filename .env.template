# Configuración de APIs para IA generativa
# IMPORTANTE: 
# 1. Copia este archivo como .env
# 2. Configura tus API keys reales
# 3. Nunca commitear .env a git

# ========================================
# APIs DE IA GENERATIVA
# ========================================

# OpenAI API (para GPT-4, etc.)
OPENAI_API_KEY=tu_openai_api_key_aqui

# Google Gemini API (usa tu GOOGLE_API_KEY existente como principal)
# GOOGLE_API_KEY=ya_configurada_en_entorno
# GEMINI_API_KEY=tu_gemini_api_key_aqui (opcional, como fallback)
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TIMEOUT=30

# ========================================
# CONFIGURACIÓN DE RATE LIMITING
# ========================================

# Límites para evitar exceder quotas
MAX_REQUESTS_PER_MINUTE=30
MAX_TOKENS_PER_REQUEST=1000
MAX_DAILY_REQUESTS=500
MAX_RETRIES=3

# ========================================
# CONFIGURACIÓN DE MODELOS Y ROUTING
# ========================================

# Modelo preferido para OpenAI
OPENAI_MODEL=gpt-3.5-turbo

# Modelo preferido para Gemini (ya definido arriba)
# GEMINI_MODEL=gemini-1.5-pro

# Configuración del Router Central
GENERATIVE_ENABLED=false
CONFIDENCE_THRESHOLD=0.85

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================

# Nivel de logging para IA generativa
GENERATIVE_LOG_LEVEL=INFO

# Archivo de log específico
GENERATIVE_LOG_FILE=logs/generative/ai_interactions.log

# ========================================
# CONFIGURACIÓN DE TIMEOUTS
# ========================================

# Timeout para requests HTTP (segundos)
HTTP_TIMEOUT=30

# Timeout para respuesta de IA (segundos)
AI_RESPONSE_TIMEOUT=45

# ========================================
# CONFIGURACIÓN DE CACHE
# ========================================

# Habilitar cache de respuestas
ENABLE_RESPONSE_CACHE=true

# Tiempo de vida del cache (minutos)
CACHE_TTL_MINUTES=60

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================

# Habilitar filtro de contenido
ENABLE_CONTENT_FILTER=true

# Máximo de caracteres en prompt del usuario
MAX_USER_INPUT_LENGTH=500